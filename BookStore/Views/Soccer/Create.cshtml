@model BookStore.Models.Player

@{
    ViewBag.Title = "Добавление игрока";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавление нового игрока</h2>

@using (Html.BeginForm())
{
    <fieldset>
        <legend>Футболист</legend>

        <div class="form-group">
            Имя игрока <br />
            @Html.TextBoxFor(model => model.Name,new {@class="form-control"})
        </div>

        <div class="form-group">
            Возраст <br />
            @Html.EditorFor(model => model.Age,null, new { @class = "form-control" })
        </div>

        <div class="form-group">
            Позиция на поле  <br />
            @Html.TextBoxFor(model => model.Position, new { @class = "form-control" })
        </div>
        <div class="form-group">
            Команда <br />
            @Html.DropDownListFor(model => model.TeamId, ViewBag.Teams as SelectList, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <input type="submit" value="Добавить игрока" class="btn btn-success" />
        </div>
    </fieldset>
}
<div>
    @Html.ActionLink("К списку игроков", "Index",null,new {@class="btn btn-default"})
</div>
